// src/MyOpenTelemetryApi.Api/appsettings.Production.json - New file
{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "MyOpenTelemetryApi": "Information"
    }
  },
  "OpenTelemetry": {
    "Exporter": {
      "Console": {
        "Enabled": false
      },
      "OTLP": {
        "Enabled": true,
        "Endpoint": "http://localhost:4317"
      },
      "File": {
        "Enabled": false
      }
    },
    "Sampling": {
      "AlwaysOn": false,
      "Ratio": 0.1
    }
  }
}